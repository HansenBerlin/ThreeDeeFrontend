<MudCard Style="max-width: 50vw;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText
                Typo="Typo.h6">
                @File.Name
            </MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton 
                Icon="@Icons.Material.Filled.Share" 
                Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        @if (_isPreview)
        {
            <ModelRenderer
                @ref="_modelRendererRef"
                Name="@File.Name"
                Id="@File.Id" 
                ColorValue="@_colorValue"/>
        }
        else
        {
            <MudCardMedia Image="assets/benchy.png" Style="height: 31vw;" />
        }
        <MudText>
            erstellt von: @File.Author
        </MudText>
        <MudText
            Typo="Typo.body2">
            @File.Description
        </MudText>
        <MudRating
            ReadOnly="true"
            SelectedValue="4"/>
        <MudExpansionPanels
            MultiExpansion="true">
            <MudExpansionPanel
                Text="Modellhistorie">
                <FileHistoryTimeline/>
            </MudExpansionPanel>
            <MudExpansionPanel
                Text="GCode">
            </MudExpansionPanel>
            <MudExpansionPanel
                Text="Kommentare">
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudCardContent>
    <MudCardActions>
        @if (_isPreview)
        {
            <MudButton
                OnClick="async () => await _modelRendererRef.ChangeColor(_colorValue)"
                Variant="Variant.Text"
                Color="Color.Primary">
                color
            </MudButton>
        }
        <MudColorPicker 
            PickerVariant="PickerVariant.Dialog" 
            @bind-Text="_colorValue" />
        <MudButton
            OnClick="Switch"
            Variant="Variant.Text"
            Color="Color.Primary">
            Toggle 
        </MudButton>
    </MudCardActions>
</MudCard>