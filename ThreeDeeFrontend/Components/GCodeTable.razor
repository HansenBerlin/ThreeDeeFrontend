@using ThreeDeeApplication.Models
<MudDataGrid Items="@GCodeSettingsRepository.MockData" SortMode="@SortMode.Multiple">
    <Columns>
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudRating Size="@Size.Small" ReadOnly="true" SelectedValue="4" />
                    <MudButton OnClick="OnButtonClicked" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Details</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.Author" />
        <PropertyColumn Property="x => x.SuccessPercentage" Title="Success Rate"/>
        <PropertyColumn Property="x => x.FilamentLengthUsed" Title="Filament used in m"/>
        <PropertyColumn Property="x => x.PrintingTimeMinutes"  Title="Printing Time in min"/>
        <!---<PropertyColumn Property="x => x.Material" Sortable="false"/>--->
    </Columns>
    <PagerContent>
        <MudDataGridPager T="GCodeSettingsModel" />
    </PagerContent>
</MudDataGrid>
