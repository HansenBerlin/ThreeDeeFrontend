@page "/Advantages"
@using ThreeDeeFrontend.Components

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.Medium">
	<h1 style="font-size: 2rem; font-weight: 400; margin-top: 30px; margin-bottom: 50px;">3D Druck it bei dir eher Error als Trial? Du hast den Überblick über deine Files und Config verloren? Wir schaffen Abhilfe!</h1>
	<MudCarousel Class="mud-width-full"
	             Style="height:400px; border-radius: 8px; background: #f1f1f1;"
	             ShowArrows="@true"
	             ShowBullets="@false"
	             EnableSwipeGesture="@true"
	             AutoCycle="@false"
	             TData="object">
		<CarouselItem ImagePath="assets/icons/failed.png"
		              Header="Problem 1:"
		              Color="Color.Tertiary"
		              Content="Vorhandene Plattformen haben viele Dateien, die Drucke klappen aber oft nicht, weil Konfigs fehlen oder schlecht dokumentiert sind."/>
		<CarouselItem ImagePath="assets/icons/print1.png"
		              Header="Unsere Lösung?"
		              Content=""/>
		<CarouselItem ImagePath="assets/icons/3d-app.png"
		              ImageBackground="#393d4e"
		              IsImageBorderless="false"
		              Content="Suchen, Filtern und Anzeigen der Dateien von anderen Nutzern im 3D-Viewer"/>
		<CarouselItem ImagePath="assets/icons/cubic.png"
		              ImageBackground="#393d4e"
		              IsImageBorderless="false"
		              Content="Übersicht der für diese Datei vorhandenen GCode Files(erfolgreiche Drucke, Bewertungen, Drucker)"/>
		<CarouselItem ImagePath="assets/icons/software.png"
		              ImageBackground="#393d4e"
		              IsImageBorderless="false"
		              Content="Detailinformationen zu jeder GCodefile mit Onlinetool zur Überprüfung der Druckgeschwindigkeiten, Materialverbrauch und Temperaturen"/>
		<CarouselItem ImagePath="assets/icons/cube-in-hand.png"
		              ImageBackground="#393d4e"
		              IsImageBorderless="false"
		              Content="Download der geeigneten Konfiguration als GCode Datei."/>
		<CarouselItem ImagePath="assets/icons/creating-cup.png"
		              ImageBackground="#393d4e"
		              IsImageBorderless="false"
		              Content="Diese kann direkt an den Drucker geschickt werden ohne ein Slicerprogramm zu nutzen."/>
		
	</MudCarousel>
	
	<div style="margin-top: 80px;"></div>
	
	<MudCarousel Class="mud-width-full"
    	             Style="height:400px; border-radius: 8px; background: #f1f1f1;"
    	             ShowArrows="@true"
    	             ShowBullets="@false"
    	             EnableSwipeGesture="@true"
    	             AutoCycle="@false"
    	             TData="object">
    		<CarouselItem ImagePath="assets/icons/failed.png"
    		              Header="Problem 2:"
    		              Content="Du hast eigene Dateien und verlierst die Übersicht über die besten Einstellungen?"/>
    		<CarouselItem ImagePath="assets/icons/print1.png"
    		              Header="Unsere Lösung:"
    		              Content=""/>
    		<CarouselItem ImagePath="assets/icons/3d-app.png"
    		              ImageBackground="#393d4e"
    		              IsImageBorderless="false"
		                  Color="Color.Tertiary"
    		              Content="1. Nutze deinen Slicer, um die besten Einstellungen zu finden."/>
    		<CarouselItem ImagePath="assets/icons/cubic.png"
    		              ImageBackground="#393d4e"
		                  IsImageBorderless="false"
		                  Color="Color.Tertiary"
    		              Content="2. Lade deine 3D-Datei hoch und teile sie mit anderen Nutzern."/>
    		<CarouselItem ImagePath="assets/icons/software.png"
    		              ImageBackground="#393d4e"
		                  IsImageBorderless="false"
		                  Color="Color.Tertiary"
    		              Content="3. Lade vielversprechende Konfigurationen hoch und profitiere von unseren fortschrittlichen Parsing-Funktionen, um das Beste aus deinem Druck herauszuholen."/>
    		<CarouselItem ImagePath="assets/icons/cube-in-hand.png"
    		              ImageBackground="#393d4e"
		                  IsImageBorderless="false"
		                  Color="Color.Tertiary"
    		              Content="4. Behalte den Überblick über alle Änderungen und dokumentiere deine Fortschritte."/>
	</MudCarousel>
</MudContainer>


